{
  "name": "koa-base",
  "version": "1.0.0",
  "description": "KOA server backend!",
  "main": "index.js",
  "engines": {
    "node": "^9.11.2"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "DB_TYPE=sqlite nyc mocha --recursive --reporter list --timeout 100000 --exit",
    "seq:migrate": "node_modules/.bin/sequelize db:migrate",
    "docker": "rm -rf node-modules && docker-compose build && docker-compose up",
    "docker:start": "docker-compose up",
    "docker:install": "docker-compose build",
    "docker:test": "docker build -t superheroes-test -f test/env/Dockerfile . && docker run --rm superheroes-test"
  },
  "keywords": [],
  "author": "Felipe Lucas",
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "bcrypt": "^3.0.0",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.5.0",
    "koa-logger": "^3.2.0",
    "koa-passport": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-session2": "^2.2.8",
    "mysql2": "^1.6.1",
    "passport-local": "^1.0.0",
    "sequelize": "^4.38.0",
    "swagger2": "^1.0.1",
    "swagger2-koa": "^1.0.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "sequelize-cli": "^4.1.1",
    "assert": "^1.4.1",
    "sqlite3": "^4.0.2",
    "supertest": "^3.3.0",
    "chai": "^4.1.2",
    "jsdoc": "^3.5.5",
    "mocha": "^4.0.1",
    "nyc": "^13.0.1"
  }
}
